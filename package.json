{
	"name": "frontendbox",
	"version": "1.0.0",
	"main": "bs-config.js",
	"config": {
		"scss_dir": "./src/scss"
	},
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"lint:html": "htmllint **/*.html",
		"lint:sass": "sass-lint -c .sass-lint.yml './src/scss/**/*.scss' -v -q",
		"watch": "npm-run-all -p watch:server watch:pug watch:lint:sass watch:sass watch:script",
		"watch:lint:sass": "watch 'npm run lint:sass' $npm_package_config_scss_dir",
		"build:sass": "node-sass --include-path scss ./src/scss/style.scss ./public/common/css/style.css -w",
		"build:css": "postcss ./public/css/**/*.css",
		"watch:pug": "pug src/pug/ -o public -w",
		"watch:server": "browser-sync start --config bs-config.js",
		"watch:script": "webpack -w",
		"release": "",
		"release:html": "",
		"release:css": "postcss",
		"release:script": ""
	},
	"repository": {
		"type": "git",
		"url": "git+https://mononoteweb@github.com/mononoteweb/frontendbox.git"
	},
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/mononoteweb/frontendbox/issues"
	},
	"homepage": "https://github.com/mononoteweb/frontendbox#readme",
	"description": "",
	"devDependencies": {
		"autoprefixer": "^8.1.0",
		"browser-sync": "^2.23.6",
		"clean-css": "^4.1.11",
		"htmllint-cli": "0.0.6",
		"node-sass": "^4.7.2",
		"npm-run-all": "^4.1.2",
		"postcss": "^6.0.20",
		"postcss-cli": "^5.0.0",
		"sass-lint": "^1.12.1",
		"ts-loader": "^4.1.0",
		"typescript": "^2.7.2",
		"watch": "^1.0.2",
		"webpack": "^4.1.1",
		"webpack-cli": "^2.0.12"
	},
	"dependencies": {
		"pug": "^2.0.1",
		"pug-cli": "^1.0.0-alpha6"
	}
}
